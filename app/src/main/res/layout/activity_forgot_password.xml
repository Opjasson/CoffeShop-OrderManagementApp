<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/FP_gretingTxt"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="42dp"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="54sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/FP_emailForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_circular_rectangle"
            android:ems="10"
            android:hint="Enter your email address"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/mediumBold_cream" />

        <TextView
            android:id="@+id/FP_alertForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="informasi"
            android:textAlignment="center"
            android:textColor="@color/bold_pink"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="* Masukan email anda, jika email benar anda akan diarahkan ke halaman ganti password"
            android:textColor="@color/hardBold_cream" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forgotPassBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:background="@drawable/full_circular_rectangle"
            android:padding="12dp"
            android:text="Submit"
            android:textColor="@color/light_cream"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>